<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TelaDeApresentacaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/voltar_tela_de_apresentacao"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="backButton"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/titulo" />

            <ImageView
                android:id="@+id/sair_tela_de_apersentacao"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="sairTelaDeApresentacao"
                app:srcCompat="@drawable/ic_exit_to_app_black_24dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/foto_tela_de_apresentacao"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        tools:srcCompat="@tools:sample/avatars[10]" />

                </FrameLayout>

                <TextView
                    android:id="@+id/titulo_tela_de_apresetacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_descricao_tela_de_apresentacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>